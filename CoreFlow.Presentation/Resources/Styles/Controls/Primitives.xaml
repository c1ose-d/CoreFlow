<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shared="clr-namespace:CoreFlow.Presentation.Resources.Styles.Shared" >
    <!--List Item-->
    <Style
        x:Key="ComboBox.ListItem.TextOnly"
        TargetType="{x:Type ComboBoxItem}" >
        <Setter
            Property="Background"
            Value="{DynamicResource SubtleFillColorTransparentBrush}" />
        <Setter
            Property="BorderBrush"
            Value="Transparent" />
        <Setter
            Property="BorderThickness"
            Value="0" />
        <Setter
            Property="Focusable"
            Value="True" />
        <Setter
            Property="Margin"
            Value="5,3" />
        <Setter
            Property="MinHeight"
            Value="34" />
        <Setter
            Property="HorizontalContentAlignment"
            Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
        <Setter
            Property="Padding"
            Value="0" />
        <Setter
            Property="SnapsToDevicePixels"
            Value="True" />
        <Setter
            Property="VerticalContentAlignment"
            Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
        <Setter
            Property="Template" >
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type ComboBoxItem}" >
                    <Grid>
                        <Border
                            x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource ControlCornerRadius}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True" >
                            <ContentPresenter
                                HorizontalAlignment="Left"
                                Margin="16,0,0,0"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                VerticalAlignment="Center" />
                        </Border>
                        <Border
                            x:Name="Selector"
                            BorderThickness="0"
                            CornerRadius="{DynamicResource ControlCornerRadius}"
                            Background="{DynamicResource AccentFillColorDefaultBrush}"
                            HorizontalAlignment="Left"
                            Margin="-1,9,0,9"
                            VerticalAlignment="Stretch"
                            Visibility="Collapsed"
                            Width="3" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="IsSelected"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Border"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                            <Setter
                                Property="Visibility"
                                TargetName="Selector"
                                Value="Visible" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition
                                    Property="IsSelected"
                                    Value="False" />
                                <Condition
                                    Property="IsMouseOver"
                                    Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter
                                Property="Background"
                                TargetName="Border"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition
                                    Property="IsSelected"
                                    Value="True" />
                                <Condition
                                    Property="IsMouseOver"
                                    Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter
                                Property="Background"
                                TargetName="Border"
                                Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                            <Setter
                                Property="Visibility"
                                TargetName="Selector"
                                Value="Visible" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
