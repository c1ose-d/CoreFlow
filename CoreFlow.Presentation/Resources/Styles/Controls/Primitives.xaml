        <Setter
            Property="Control.Template" >
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Border
                            BorderBrush="{DynamicResource FocusStrokeColorInnerBrush}"
                            BorderThickness="3" />
                        <Border
                            BorderBrush="{DynamicResource FocusStrokeColorOuterBrush}"
                            BorderThickness="2" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style
        x:Key="TextBoxButton"
        TargetType="{x:Type Button}" >
        <Setter
            Property="Background"
            Value="{DynamicResource SubtleFillColorTransparentBrush}" />
        <Setter
            Property="BorderBrush"
            Value="{DynamicResource SubtleFillColorTransparentBrush}" />
        <Setter
            Property="BorderThickness"
            Value="1" />
        <Setter
            Property="Content"
            Value="&#xE894;" />
        <Setter
            Property="FocusVisualStyle"
            Value="{DynamicResource FocusRect}" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="HorizontalContentAlignment"
            Value="Center" />
        <Setter
            Property="MinHeight"
            Value="22" />
        <Setter
            Property="MinWidth"
            Value="26" />
        <Setter
            Property="Margin"
            Value="3" />
        <Setter
            Property="SnapsToDevicePixels"
            Value="True" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="VerticalContentAlignment"
            Value="Center" />
        <Setter
            Property="Template" >
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type Button}" >
                    <Border
                        x:Name="Fill"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{DynamicResource ControlCornerRadius}" >
                        <Grid>
                            <Border
                                x:Name="Stroke"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource ControlCornerRadius}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            <TextBlock
                                x:Name="ContentText"
                                FontFamily="{DynamicResource SegoeFluentIcons}"
                                FontSize="12"
                                Foreground="{TemplateBinding Foreground}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                LineHeight="12"
                                Text="{TemplateBinding Content}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="IsDefaulted"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsMouseOver"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsPressed"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorSecondaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsEnabled"
                            Value="False" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorDisabledBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorDisabledBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorDisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
