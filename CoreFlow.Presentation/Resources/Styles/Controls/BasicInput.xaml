<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">
    <!--Button-->
    <Style
        x:Key="Button.Accent.TextOnly"
        TargetType="{x:Type Button}" >
        <Setter
            Property="Background"
            Value="{DynamicResource AccentFillColorDefaultBrush}" />
        <Setter
            Property="BorderBrush"
            Value="{DynamicResource AccentControlElevationBorderBrush}" />
        <Setter
            Property="BorderThickness"
            Value="1" />
        <Setter
            Property="FocusVisualStyle"
            Value="{DynamicResource FocusRect}"/>
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="HorizontalContentAlignment"
            Value="Center" />
        <Setter
            Property="MinHeight"
            Value="32" />
        <Setter
            Property="MinWidth"
            Value="120" />
        <Setter
            Property="SnapsToDevicePixels"
            Value="True" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="VerticalContentAlignment"
            Value="Center" />
        <Setter
            Property="Template" >
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type Button}" >
                    <Border
                        x:Name="Fill"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{DynamicResource ControlCornerRadius}" >
                        <Grid>
                            <Border
                                x:Name="Stroke"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource ControlCornerRadius}"
                                Margin="0"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            <TextBlock
                                x:Name="ContentText"
                                Foreground="{TemplateBinding Foreground}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                Style="{DynamicResource BodyTextBlockStyle}"
                                Text="{TemplateBinding Content}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="IsDefaulted"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource AccentFillColorDefaultBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource AccentControlElevationBorderBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsMouseOver"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource AccentFillColorSecondaryBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource AccentControlElevationBorderBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsPressed"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource AccentFillColorTertiaryBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource ControlStrokeColorOnAccentDefaultBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextOnAccentFillColorSecondaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsEnabled"
                            Value="False" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource AccentFillColorDisabledBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="Transparent" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextOnAccentFillColorDisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
