<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <Style
        x:Key="TitleBar.User"
        TargetType="{x:Type Button}" >
        <Setter
            Property="Background"
            Value="{DynamicResource SubtleFillColorTransparentBrush}" />
        <Setter
            Property="BorderBrush"
            Value="{DynamicResource SubtleFillColorTransparentBrush}" />
        <Setter
            Property="BorderThickness"
            Value="1" />
        <Setter
            Property="Content"
            Value="&#xE77B;" />
        <Setter
            Property="FocusVisualStyle"
            Value="{DynamicResource FocusRect}" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="HorizontalContentAlignment"
            Value="Center" />
        <Setter
            Property="MinHeight"
            Value="34" />
        <Setter
            Property="MinWidth"
            Value="38" />
        <Setter
            Property="SnapsToDevicePixels"
            Value="True" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="VerticalContentAlignment"
            Value="Center" />
        <Setter
            Property="Template" >
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type Button}" >
                    <Border
                        x:Name="Fill"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{DynamicResource ControlCornerRadius}" >
                        <Grid>
                            <Border
                                x:Name="Stroke"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource ControlCornerRadius}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            <TextBlock
                                x:Name="ContentText"
                                FontFamily="{DynamicResource SegoeFluentIcons}"
                                Foreground="{TemplateBinding Foreground}"
                                Margin="0,6,0,0"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                Style="{DynamicResource CaptionTextBlockStyle}"
                                Text="{TemplateBinding Content}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="IsDefaulted"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsMouseOver"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsPressed"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorSecondaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsEnabled"
                            Value="False" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorDisabledBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorDisabledBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorDisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style
        x:Key="TitleBar.Caption"
        TargetType="{x:Type Button}" >
        <Setter
            Property="Background"
            Value="{DynamicResource SubtleFillColorTransparentBrush}" />
        <Setter
            Property="BorderBrush"
            Value="Transparent" />
        <Setter
            Property="BorderThickness"
            Value="0" />
        <Setter
            Property="FocusVisualStyle"
            Value="{DynamicResource FocusRect}" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="HorizontalContentAlignment"
            Value="Center" />
        <Setter
            Property="Margin"
            Value="0,1,1,0" />
        <Setter
            Property="MinHeight"
            Value="48" />
        <Setter
            Property="MinWidth"
            Value="46" />
        <Setter
            Property="SnapsToDevicePixels"
            Value="True" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="VerticalContentAlignment"
            Value="Center" />
        <Setter
            Property="Template" >
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type Button}" >
                    <Border
                        x:Name="Fill"
                        Background="{TemplateBinding Background}" >
                        <Grid>
                            <TextBlock
                                x:Name="ContentText"
                                FontFamily="{DynamicResource SegoeFluentIcons}"
                                FontSize="10"
                                Foreground="{TemplateBinding Foreground}"
                                Margin="0,6,0,0"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                Style="{DynamicResource CaptionTextBlockStyle}"
                                Text="{TemplateBinding Content}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="IsDefaulted"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsMouseOver"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsPressed"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorSecondaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsEnabled"
                            Value="False" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorDisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style
        x:Key="TitleBar.Close"
        TargetType="{x:Type Button}" >
        <Setter
            Property="Background"
            Value="{DynamicResource SubtleFillColorTransparentBrush}" />
        <Setter
            Property="BorderBrush"
            Value="Transparent" />
        <Setter
            Property="BorderThickness"
            Value="0" />
        <Setter
            Property="Content"
            Value="&#xE8BB;" />
        <Setter
            Property="FocusVisualStyle"
            Value="{DynamicResource FocusRect}" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="HorizontalContentAlignment"
            Value="Center" />
        <Setter
            Property="Margin"
            Value="0,1,1,0" />
        <Setter
            Property="MinHeight"
            Value="48" />
        <Setter
            Property="MinWidth"
            Value="46" />
        <Setter
            Property="SnapsToDevicePixels"
            Value="True" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="VerticalContentAlignment"
            Value="Center" />
        <Setter
            Property="Template" >
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type Button}" >
                    <Border
                        x:Name="Fill"
                        Background="{TemplateBinding Background}"
                        CornerRadius="0,8,0,0" >
                        <Grid>
                            <TextBlock
                                x:Name="ContentText"
                                FontFamily="{DynamicResource SegoeFluentIcons}"
                                FontSize="10"
                                Foreground="{TemplateBinding Foreground}"
                                Margin="0,6,0,0"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                Style="{DynamicResource CaptionTextBlockStyle}"
                                Text="{TemplateBinding Content}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="IsDefaulted"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsMouseOver"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SystemFillColorCriticalBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsPressed"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SystemFillColorCriticalBrush}" />
                            <Setter
                                Property="Opacity"
                                TargetName="Fill"
                                Value="0.9" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}" />
                            <Setter
                                Property="Opacity"
                                TargetName="ContentText"
                                Value="0.7" />
                        </Trigger>
                        <Trigger
                            Property="IsEnabled"
                            Value="False" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorDisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>