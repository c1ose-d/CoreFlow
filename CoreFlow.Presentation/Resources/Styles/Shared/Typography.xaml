<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <FontFamily
        x:Key="SegoeFluentIcons" >
        /CoreFlow.Presentation;component/Resources/Fonts/Segoe Fluent Icons.ttf#Segoe Fluent Icons
    </FontFamily>
    <FontFamily
        x:Key="SegoeUIVariableStaticSmall" >
        /CoreFlow.Presentation;component/Resources/Fonts/Segoe-UI-Variable-Static-Small.ttf#Segoe UI Variable Static Small
    </FontFamily>
    <FontFamily
        x:Key="SegoeUIVariableStaticText" >
        /CoreFlow.Presentation;component/Resources/Fonts/Segoe-UI-Variable-Static-Text.ttf#Segoe UI Variable Static Text
    </FontFamily>
    <FontFamily
        x:Key="SegoeUIVariableStaticTextSemibold" >
        /CoreFlow.Presentation;component/Resources/Fonts/Segoe-UI-Variable-Static-Text-Semibold.ttf#Segoe UI Variable Static Text Semibold
    </FontFamily>
    <FontFamily
        x:Key="SegoeUIVariableStaticDisplaySemibold" >
        /CoreFlow.Presentation;component/Resources/Fonts/Segoe-UI-Variable-Static-Display-Semibold.ttf#Segoe UI Variable Static Display Semibold
    </FontFamily>
    <Style
        x:Key="CaptionTextBlockStyle"
        TargetType="{x:Type TextBlock}" >
        <Setter
            Property="FontFamily"
            Value="{StaticResource SegoeUIVariableStaticSmall}" />
        <Setter
            Property="FontSize"
            Value="12" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="LineHeight"
            Value="16" />
    </Style>
    <Style
        x:Key="BodyTextBlockStyle"
        TargetType="{x:Type TextBlock}" >
        <Setter
            Property="FontFamily"
            Value="{StaticResource SegoeUIVariableStaticText}" />
        <Setter
            Property="FontSize"
            Value="14" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="LineHeight"
            Value="20" />
    </Style>
    <Style
        x:Key="BodyStrongTextBlockStyle"
        TargetType="{x:Type TextBlock}" >
        <Setter
            Property="FontFamily"
            Value="{StaticResource SegoeUIVariableStaticTextSemibold}" />
        <Setter
            Property="FontSize"
            Value="14" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="LineHeight"
            Value="20" />
    </Style>
    <Style
        x:Key="SubtitleTextBlockStyle"
        TargetType="{x:Type TextBlock}" >
        <Setter
            Property="FontFamily"
            Value="{StaticResource SegoeUIVariableStaticDisplaySemibold}" />
        <Setter
            Property="FontSize"
            Value="20" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="LineHeight"
            Value="28" />
    </Style>
    <Style
        x:Key="TitleTextBlockStyle"
        TargetType="{x:Type TextBlock}" >
        <Setter
            Property="FontFamily"
            Value="{StaticResource SegoeUIVariableStaticDisplaySemibold}" />
        <Setter
            Property="FontSize"
            Value="28" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="LineHeight"
            Value="36" />
    </Style>
    <Style
        x:Key="TitleLargeTextBlockStyle"
        TargetType="{x:Type TextBlock}" >
        <Setter
            Property="FontFamily"
            Value="{StaticResource SegoeUIVariableStaticDisplaySemibold}" />
        <Setter
            Property="FontSize"
            Value="40" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="LineHeight"
            Value="52" />
    </Style>
    <Style
        x:Key="DisplayTextBlockStyle"
        TargetType="{x:Type TextBlock}" >
        <Setter
            Property="FontFamily"
            Value="{StaticResource SegoeUIVariableStaticDisplaySemibold}" />
        <Setter
            Property="FontSize"
            Value="68" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="LineHeight"
            Value="92" />
    </Style>
</ResourceDictionary>