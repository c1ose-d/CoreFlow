                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource ControlCornerRadius}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True" >
                            <TextBlock
                                x:Name="ContentIcon"
                                FontFamily="{DynamicResource SegoeFluentIcons}"
                                FontSize="16"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                HorizontalAlignment="Center"
                                LineHeight="16"
                                Text="{TemplateBinding shared:NavItemProperties.Icon}"
                                VerticalAlignment="Center" />
                        </Border>
                        <Border
                            x:Name="Selector"
                            BorderThickness="0"
                            CornerRadius="{DynamicResource ControlCornerRadius}"
                            Background="{DynamicResource AccentFillColorDefaultBrush}"
                            HorizontalAlignment="Left"
                            Margin="-1,9,0,9"
                            VerticalAlignment="Stretch"
                            Visibility="Collapsed"
                            Width="3" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="IsSelected"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Border"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                            <Setter
                                Property="Visibility"
                                TargetName="Selector"
                                Value="Visible" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition
                                    Property="IsSelected"
                                    Value="False" />
                                <Condition
                                    Property="IsMouseOver"
                                    Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter
                                Property="Background"
                                TargetName="Border"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition
                                    Property="IsSelected"
                                    Value="True" />
                                <Condition
                                    Property="IsMouseOver"
                                    Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter
                                Property="Background"
                                TargetName="Border"
                                Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                            <Setter
                                Property="Visibility"
                                TargetName="Selector"
                                Value="Visible" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>