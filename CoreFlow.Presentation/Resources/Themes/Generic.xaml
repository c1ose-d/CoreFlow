<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Themes/BasicInput.xaml" />
        <ResourceDictionary Source="/Resources/Themes/Primitives.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <!--Geometry-->
    <CornerRadius x:Key="OverlayCornerRadius" BottomLeft="8" BottomRight="8" TopLeft="8" TopRight="8" />
    <CornerRadius x:Key="ControlCornerRadius" BottomLeft="4" BottomRight="4" TopLeft="4" TopRight="4" />
    <!--Typography-->
    <FontFamily x:Key="SegoeFluentIcons" >
        /CoreFlow.Presentation;component/Resources/Fonts/Segoe Fluent Icons.ttf#Segoe Fluent Icons
    </FontFamily>
    <FontFamily x:Key="SegoeUIVariableStaticSmall" >
        /CoreFlow.Presentation;component/Resources/Fonts/Segoe-UI-Variable-Static-Small.ttf#Segoe UI Variable Static Small
    </FontFamily>
    <FontFamily x:Key="SegoeUIVariableStaticText" >
        /CoreFlow.Presentation;component/Resources/Fonts/Segoe-UI-Variable-Static-Text.ttf#Segoe UI Variable Static Text
    </FontFamily>
    <FontFamily x:Key="SegoeUIVariableStaticTextSemibold" >
        /CoreFlow.Presentation;component/Resources/Fonts/Segoe-UI-Variable-Static-Text-Semibold.ttf#Segoe UI Variable Static Text Semibold
    </FontFamily>
    <FontFamily x:Key="SegoeUIVariableStaticDisplaySemibold" >
        /CoreFlow.Presentation;component/Resources/Fonts/Segoe-UI-Variable-Static-Display-Semibold.ttf#Segoe UI Variable Static Display Semibold
    </FontFamily>
    <Style x:Key="CaptionTextBlockStyle" TargetType="{x:Type TextBlock}" >
        <Setter Property="FontFamily" Value="{StaticResource SegoeUIVariableStaticSmall}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter Property="LineHeight" Value="16" />
    </Style>
    <Style x:Key="BodyTextBlockStyle" TargetType="{x:Type TextBlock}" >
        <Setter Property="FontFamily" Value="{StaticResource SegoeUIVariableStaticText}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter Property="LineHeight" Value="20" />
    </Style>
    <Style x:Key="BodyStrongTextBlockStyle" TargetType="{x:Type TextBlock}" >
        <Setter Property="FontFamily" Value="{StaticResource SegoeUIVariableStaticTextSemibold}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter Property="LineHeight" Value="20" />
    </Style>
    <Style x:Key="SubtitleTextBlockStyle" TargetType="{x:Type TextBlock}" >
        <Setter Property="FontFamily" Value="{StaticResource SegoeUIVariableStaticDisplaySemibold}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter Property="LineHeight" Value="28" />
    </Style>
    <Style x:Key="TitleTextBlockStyle" TargetType="{x:Type TextBlock}" >
        <Setter Property="FontFamily" Value="{StaticResource SegoeUIVariableStaticDisplaySemibold}" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter Property="LineHeight" Value="36" />
    </Style>
    <Style x:Key="TitleLargeTextBlockStyle" TargetType="{x:Type TextBlock}" >
        <Setter Property="FontFamily" Value="{StaticResource SegoeUIVariableStaticDisplaySemibold}" />
        <Setter Property="FontSize" Value="40" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter Property="LineHeight" Value="52" />
    </Style>
    <Style x:Key="DisplayTextBlockStyle" TargetType="{x:Type TextBlock}" >
        <Setter Property="FontFamily" Value="{StaticResource SegoeUIVariableStaticDisplaySemibold}" />
        <Setter Property="FontSize" Value="68" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter Property="LineHeight" Value="92" />
    </Style>
    <!--Title Bar-->
    <Style
        x:Key="TitleBar.FullScreen"
        TargetType="{x:Type Button}" >
        <Setter
            Property="Background"
            Value="{DynamicResource SubtleFillColorTransparentBrush}" />
        <Setter
            Property="BorderBrush"
            Value="{DynamicResource SubtleFillColorTransparentBrush}" />
        <Setter
            Property="BorderThickness"
            Value="1" />
        <Setter
            Property="Content"
            Value="&#xE740;" />
        <Setter
            Property="FocusVisualStyle"
            Value="{DynamicResource FocusRect}"/>
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="HorizontalContentAlignment"
            Value="Center" />
        <Setter
            Property="MinHeight"
            Value="34" />
        <Setter
            Property="MinWidth"
            Value="38" />
        <Setter
            Property="SnapsToDevicePixels"
            Value="True" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="VerticalContentAlignment"
            Value="Center" />
        <Setter
            Property="Template" >
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type Button}" >
                    <Border
                        x:Name="Fill"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{DynamicResource ControlCornerRadius}" >
                        <Grid>
                            <Border
                                x:Name="Stroke"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource ControlCornerRadius}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            <TextBlock
                                x:Name="ContentText"
                                FontFamily="{StaticResource SegoeFluentIcons}"
                                Foreground="{TemplateBinding Foreground}"
                                Margin="0,6,0,0"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                Style="{DynamicResource CaptionTextBlockStyle}"
                                Text="{TemplateBinding Content}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="IsDefaulted"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsMouseOver"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsPressed"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorSecondaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsEnabled"
                            Value="False" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorDisabledBrush}" />
                            <Setter
                                Property="BorderBrush"
                                TargetName="Stroke"
                                Value="{DynamicResource SubtleFillColorDisabledBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorDisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style
        x:Key="TitleBar.Caption"
        TargetType="{x:Type Button}" >
        <Setter
            Property="Background"
            Value="{DynamicResource SubtleFillColorTransparentBrush}" />
        <Setter
            Property="BorderBrush"
            Value="Transparent" />
        <Setter
            Property="BorderThickness"
            Value="0" />
        <Setter
            Property="FocusVisualStyle"
            Value="{DynamicResource FocusRect}"/>
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="HorizontalContentAlignment"
            Value="Center" />
        <Setter
            Property="Margin"
            Value="0,1,1,0" />
        <Setter
            Property="MinHeight"
            Value="48" />
        <Setter
            Property="MinWidth"
            Value="46" />
        <Setter
            Property="SnapsToDevicePixels"
            Value="True" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="VerticalContentAlignment"
            Value="Center" />
        <Setter
            Property="Template" >
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type Button}" >
                    <Border
                        x:Name="Fill"
                        Background="{TemplateBinding Background}" >
                        <Grid>
                            <TextBlock
                                x:Name="ContentText"
                                FontFamily="{StaticResource SegoeFluentIcons}"
                                FontSize="10"
                                Foreground="{TemplateBinding Foreground}"
                                Margin="0,6,0,0"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                Style="{DynamicResource CaptionTextBlockStyle}"
                                Text="{TemplateBinding Content}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="IsDefaulted"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsMouseOver"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsPressed"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTertiaryBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorSecondaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsEnabled"
                            Value="False" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorDisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style
        x:Key="TitleBar.Close"
        TargetType="{x:Type Button}" >
        <Setter
            Property="Background"
            Value="{DynamicResource SubtleFillColorTransparentBrush}" />
        <Setter
            Property="BorderBrush"
            Value="Transparent" />
        <Setter
            Property="BorderThickness"
            Value="0" />
        <Setter
            Property="Content"
            Value="&#xE8BB;" />
        <Setter
            Property="FocusVisualStyle"
            Value="{DynamicResource FocusRect}"/>
        <Setter
            Property="Foreground"
            Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="HorizontalContentAlignment"
            Value="Center" />
        <Setter
            Property="Margin"
            Value="0,1,1,0" />
        <Setter
            Property="MinHeight"
            Value="48" />
        <Setter
            Property="MinWidth"
            Value="46" />
        <Setter
            Property="SnapsToDevicePixels"
            Value="True" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="VerticalContentAlignment"
            Value="Center" />
        <Setter
            Property="Template" >
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type Button}" >
                    <Border
                        x:Name="Fill"
                        Background="{TemplateBinding Background}"
                        CornerRadius="0,8,0,0" >
                        <Grid>
                            <TextBlock
                                x:Name="ContentText"
                                FontFamily="{StaticResource SegoeFluentIcons}"
                                FontSize="10"
                                Foreground="{TemplateBinding Foreground}"
                                Margin="0,6,0,0"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                Style="{DynamicResource CaptionTextBlockStyle}"
                                Text="{TemplateBinding Content}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="IsDefaulted"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsMouseOver"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SystemFillColorCriticalBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}" />
                        </Trigger>
                        <Trigger
                            Property="IsPressed"
                            Value="True" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SystemFillColorCriticalBrush}" />
                            <Setter
                                Property="Opacity"
                                TargetName="Fill"
                                Value="0.9" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}" />
                            <Setter
                                Property="Opacity"
                                TargetName="ContentText"
                                Value="0.7" />
                        </Trigger>
                        <Trigger
                            Property="IsEnabled"
                            Value="False" >
                            <Setter
                                Property="Background"
                                TargetName="Fill"
                                Value="{DynamicResource SubtleFillColorTransparentBrush}" />
                            <Setter
                                Property="TextElement.Foreground"
                                TargetName="ContentText"
                                Value="{DynamicResource TextFillColorDisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>