<UserControl
    x:Class="CoreFlow.Presentation.Controls.TextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CoreFlow.Presentation.Controls"
    mc:Ignorable="d"
    d:DesignHeight="32"
    d:DesignWidth="160" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition
                Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox
            x:Name="PART_TextBox"
            Grid.ColumnSpan="2"
            Style="{DynamicResource TextBox}"
            Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock
            FontFamily="{DynamicResource SegoeUIVariableStaticText}"
            FontSize="14"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Grid.ColumnSpan="2"
            IsHitTestVisible="False"
            LineHeight="20"
            Margin="15,0,36,0"
            Text="{Binding Placeholder, RelativeSource={RelativeSource AncestorType=UserControl}}"
            VerticalAlignment="Center"
            Visibility="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StringEmptyToVisibilityConverter}}" />
        <Button
            Command="{Binding ClearCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Grid.Column="1"
            IsTabStop="False"
            Style="{DynamicResource TextBoxButton}"
            Visibility="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />
    </Grid>
</UserControl>