<Page
    x:Class="CoreFlow.Presentation.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="clr-namespace:CoreFlow.Presentation.Resources.Styles.Shared"
    xmlns:viewmodels="clr-namespace:CoreFlow.Presentation.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:SideNavViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Title="Настройки" >
    <Border
        Padding="33,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="3,0,3,36"
                Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Page}}"
                Style="{DynamicResource TitleTextBlockStyle}" />
            <ListView
                Grid.Row="1"
                SelectedValue="{Binding SelectedMenuKey, Mode=TwoWay}"
                SelectedValuePath="Tag"
                Style="{DynamicResource ListView}" >
                <ListViewItem
                    shared:ListItemProperties.Caption="Создание, изменение и удаление информационных систем"
                    shared:ListItemProperties.Icon="&#xE8EC;"
                    shared:ListItemProperties.Text="Информационные системы"
                    Style="{DynamicResource ListView.ListItem.IconTextCaption.NavPointer}"
                    Tag="AppSystems" />
                <ListViewItem
                    shared:ListItemProperties.Caption="Создание, изменение и удаление пользователей, добавление в группы информационных систем"
                    shared:ListItemProperties.Icon="&#xE716;"
                    shared:ListItemProperties.Text="Пользователи"
                    Style="{DynamicResource ListView.ListItem.IconTextCaption.NavPointer}"
                    Tag="Users" />
            </ListView>
        </Grid>
    </Border>
</Page>