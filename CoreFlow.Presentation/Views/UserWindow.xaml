<Window
    x:Class="CoreFlow.Presentation.Views.UserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:CoreFlow.Presentation.Controls"
    xmlns:shared="clr-namespace:CoreFlow.Presentation.Resources.Styles.Shared"
    xmlns:viewmodels="clr-namespace:CoreFlow.Presentation.ViewModels"
    d:DataContext="{d:DesignInstance viewmodels:UserWindowViewModel}"
    mc:Ignorable="d"
    AllowsTransparency="True"
    Background="Transparent"
    BorderBrush="Transparent"
    Foreground="Transparent"
    MaxHeight="500"
    MaxWidth="500"
    MinHeight="320"
    MinWidth="500"
    Title="{Binding WindowTitle}"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    Loaded="Window_Loaded" >
    <Grid>
        <Border
            Background="{DynamicResource AcrylicBackgroundFillColorDefaultBrush}"
            BorderBrush="{DynamicResource LayerOnAcrylicFillColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{DynamicResource OverlayCornerRadius}" >
        </Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="24,32,24,24"
                Style="{DynamicResource TitleTextBlockStyle}"
                Text="{Binding WindowTitle}" />
            <Border
                Grid.Row="1"
                Margin="24,0,24,24" >
                <ScrollViewer
                    HorizontalContentAlignment="Stretch"
                    Style="{DynamicResource ScrollViewer}" >
                    <controls:Grid
                        Orientation="Vertical"
                        Spacing="16" >
                        <controls:Grid.RowDefinitions>
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition />
                            <RowDefinition />
                        </controls:Grid.RowDefinitions>
                        <controls:Grid
                            Grid.Row="1"
                            Orientation="Vertical"
                            Spacing="12" >
                            <TextBlock
                                Style="{DynamicResource BodyTextBlockStyle}"
                                Text="Фамилия" />
                            <controls:TextBox
                                Placeholder="Last Name"
                                Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />
                        </controls:Grid>
                        <controls:Grid
                            Grid.Row="1"
                            Orientation="Vertical"
                            Spacing="12" >
                            <TextBlock
                                Style="{DynamicResource BodyTextBlockStyle}"
                                Text="Имя" />
                            <controls:TextBox
                                Placeholder="First name"
                                Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />
                        </controls:Grid>
                        <controls:Grid
                            Grid.Row="1"
                            Orientation="Vertical"
                            Spacing="12" >
                            <TextBlock
                                Style="{DynamicResource BodyTextBlockStyle}"
                                Text="Отчество" />
                            <controls:TextBox
                                Placeholder="Middle name"
                                Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}" />
                        </controls:Grid>
                        <controls:Grid
                            Grid.Row="1"
                            Orientation="Vertical"
                            Spacing="12" >
                            <TextBlock
                                Style="{DynamicResource BodyTextBlockStyle}"
                                Text="Имя пользователя" />
                            <controls:TextBox
                                Placeholder="User name"
                                Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />
                        </controls:Grid>
                        <controls:Grid
                            Grid.Row="1"
                            Orientation="Vertical"
                            Spacing="12" >
                            <TextBlock
                                Style="{DynamicResource BodyTextBlockStyle}"
                                Text="Пароль" />
                            <controls:TextBox
                                Placeholder="Password"
                                Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />
                        </controls:Grid>
                        <CheckBox
                            Content="Администратор"
                            IsChecked="{Binding IsAdmin, UpdateSourceTrigger=PropertyChanged}"
                            Style="{DynamicResource CheckBox}" />
                        <controls:Grid
                            Grid.Row="1"
                            Orientation="Vertical"
                            Spacing="12" >
                            <TextBlock
                                Style="{DynamicResource BodyTextBlockStyle}"
                                Text="Информационные системы" />
                            <ListView
                                shared:ListViewProperties.SelectedItems="{Binding SelectedItems, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                ItemsSource="{Binding Items}"
                                SelectionMode="Multiple"
                                Style="{DynamicResource ListView}" >
                                <ListView.ItemContainerStyle>
                                    <Style
                                        TargetType="{x:Type ListViewItem}"
                                        BasedOn="{StaticResource ListView.ListItem.Check}" >
                                        <Setter
                                            Property="shared:ListItemProperties.Text"
                                            Value="{Binding ShortName}" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </controls:Grid>
                    </controls:Grid>
                </ScrollViewer>
            </Border>
            <Border
                Background="{DynamicResource AcrylicBackgroundFillColorBaseBrush}"
                CornerRadius="0,0,8,8"
                Grid.Row="2"
                Padding="24" >
                <controls:Grid
                    Orientation="Horizontal"
                    Spacing="8" >
                    <Button
                        Command="{Binding SaveCommand}"
                        Content="Сохранить"
                        IsDefault="True"
                        Style="{DynamicResource Button.Accent.TextOnly}" />
                    <Button
                        Command="{Binding CancelCommand}"
                        Content="Отменить"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        IsCancel="True"
                        Style="{DynamicResource Button.Standard.TextOnly}" />
                </controls:Grid>
            </Border>
        </Grid>
    </Grid>
</Window>