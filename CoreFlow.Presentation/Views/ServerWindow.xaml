<Window
    x:Class="CoreFlow.Presentation.Views.ServerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:CoreFlow.Presentation.Controls"
    xmlns:shared="clr-namespace:CoreFlow.Presentation.Resources.Styles.Shared"
    xmlns:viewmodels="clr-namespace:CoreFlow.Presentation.ViewModels"
    d:DataContext="{d:DesignInstance viewmodels:ServerWindowViewModel}"
    mc:Ignorable="d"
    AllowsTransparency="True"
    Background="Transparent"
    BorderBrush="Transparent"
    Foreground="Transparent"
    MaxHeight="500"
    MaxWidth="500"
    MinHeight="320"
    MinWidth="500"
    Title="{Binding WindowTitle}"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    Loaded="Window_Loaded" >
    <Grid>
        <Border
            Background="{DynamicResource AcrylicBackgroundFillColorDefaultBrush}"
            BorderBrush="{DynamicResource LayerOnAcrylicFillColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{DynamicResource OverlayCornerRadius}" >
        </Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="24,32,24,24"
                Style="{DynamicResource TitleTextBlockStyle}"
                Text="{Binding WindowTitle}" />
            <Border
                Grid.Row="1"
                Margin="24,0,24,24" >
                <ScrollViewer
                    HorizontalContentAlignment="Stretch"
                    Style="{DynamicResource ScrollViewer}" >
                    <controls:Grid
                    Orientation="Vertical"
                    Spacing="16" >
                        <controls:Grid
                        Orientation="Vertical"
                        Spacing="12" >
                            <TextBlock
                            Style="{DynamicResource BodyTextBlockStyle}"
                            Text="IP адрес" />
                            <controls:TextBox
                            Placeholder="IP address"
                            Text="{Binding IpAdress, UpdateSourceTrigger=PropertyChanged}" />
                        </controls:Grid>
                        <controls:Grid
                        Orientation="Vertical"
                        Spacing="12" >
                            <TextBlock
                            Style="{DynamicResource BodyTextBlockStyle}"
                            Text="DNS имя" />
                            <controls:TextBox
                            Placeholder="Host name"
                            Text="{Binding HostName, UpdateSourceTrigger=PropertyChanged}" />
                        </controls:Grid>
                        <controls:Grid
                        Orientation="Vertical"
                        Spacing="12" >
                            <TextBlock
                            Style="{DynamicResource BodyTextBlockStyle}"
                            Text="Имя пользователя для подключения" />
                            <controls:TextBox
                            Placeholder="User name"
                            Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />
                        </controls:Grid>
                        <controls:Grid
                        Orientation="Vertical"
                        Spacing="12" >
                            <TextBlock
                            Style="{DynamicResource BodyTextBlockStyle}"
                            Text="Пароль пользователя для подключения" />
                            <controls:TextBox
                            Placeholder="Password"
                            Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />
                        </controls:Grid>
                        <controls:Grid
                        Orientation="Vertical"
                        Spacing="12" >
                            <TextBlock
                            Style="{DynamicResource BodyTextBlockStyle}"
                            Text="Блок серверов" />
                            <ComboBox
                            HorizontalAlignment="Left"
                            IsEditable="False"
                            ItemsSource="{Binding Items}"
                            SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                            Style="{DynamicResource ComboBox}" >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="5,3"
                                            Style="{DynamicResource BodyTextBlockStyle}"
                                            Text="{Binding Name}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                                <ComboBox.ItemContainerStyle>
                                    <Style
                                        BasedOn="{StaticResource ComboBox.ListItem.TextOnly}"
                                        TargetType="{x:Type ComboBoxItem}" >
                                        <Setter
                                            Property="shared:ListItemProperties.Text"
                                            Value="{Binding Name}" />
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                        </controls:Grid>
                    </controls:Grid>
                </ScrollViewer>
            </Border>
            <Border
                Background="{DynamicResource AcrylicBackgroundFillColorBaseBrush}"
                CornerRadius="0,0,8,8"
                Grid.Row="2"
                Padding="24" >
                <controls:Grid
                    Orientation="Horizontal"
                    Spacing="8" >
                    <Button
                        Command="{Binding SaveCommand}"
                        Content="Сохранить"
                        IsDefault="True"
                        Style="{DynamicResource Button.Accent.TextOnly}" />
                    <Button
                        Command="{Binding CancelCommand}"
                        Content="Отменить"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        IsCancel="True"
                        Style="{DynamicResource Button.Standard.TextOnly}" />
                </controls:Grid>
            </Border>
        </Grid>
    </Grid>
</Window>