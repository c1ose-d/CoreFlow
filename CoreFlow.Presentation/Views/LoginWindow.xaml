<Window
    x:Class="CoreFlow.Presentation.ViewModels.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:CoreFlow.Presentation.Controls"
    xmlns:viewmodels="clr-namespace:CoreFlow.Presentation.ViewModels"
    d:DataContext="{d:DesignInstance viewmodels:LoginWindowViewModel}"
    mc:Ignorable="d"
    AllowsTransparency="True"
    Background="Transparent"
    BorderBrush="Transparent"
    Foreground="Transparent"
    MinHeight="320"
    MinWidth="320"
    MaxWidth="320"
    Title="Login Window"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None" >
    <Grid>
        <Border
            Background="{DynamicResource AcrylicBackgroundFillColorDefaultBrush}"
            BorderBrush="{DynamicResource LayerOnAcrylicFillColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{DynamicResource OverlayCornerRadius}" >
        </Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border
                Margin="24,32,24,24" >
                <controls:Grid
                    Grid.Row="1"
                    Orientation="Vertical"
                    Spacing="16" >
                    <controls:Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition />
                        <RowDefinition />
                    </controls:Grid.RowDefinitions>
                    <TextBlock
                        Style="{DynamicResource TitleTextBlockStyle}"
                        Text="Авторизация" />
                    <controls:Grid
                        Grid.Row="1"
                        Orientation="Vertical"
                        Spacing="12" >
                        <TextBlock
                            Style="{DynamicResource BodyTextBlockStyle}"
                            Text="Имя пользователя" />
                        <controls:TextBox
                            Placeholder="User Name"
                            Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:Grid>
                    <controls:Grid
                        Grid.Row="1"
                        Orientation="Vertical"
                        Spacing="12" >
                        <TextBlock
                            Style="{DynamicResource BodyTextBlockStyle}"
                            Text="Пароль" />
                        <controls:TextBox
                            Placeholder="Password"
                            Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:Grid>
                </controls:Grid>
            </Border>
            <Border
                Background="{DynamicResource AcrylicBackgroundFillColorBaseBrush}"
                CornerRadius="0,0,8,8"
                Grid.Row="1"
                Padding="24" >
                <controls:Grid
                    Orientation="Horizontal"
                    Spacing="8" >
                    <Button
                        Command="{Binding LoginCommand}"
                        Content="Войти"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        IsDefault="True"
                        Style="{DynamicResource Button.Accent.TextOnly}" />
                    <Button
                        Command="{Binding CancelCommand}"
                        Content="Отменить"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        IsCancel="True"
                        Style="{DynamicResource Button.Standard.TextOnly}" />
                </controls:Grid>
            </Border>
        </Grid>
    </Grid>
</Window>