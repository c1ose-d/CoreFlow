<Page
    x:Class="CoreFlow.Presentation.Views.ServersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:CoreFlow.Presentation.Controls"
    xmlns:server="clr-namespace:CoreFlow.Application.DTOs.Server;assembly=CoreFlow.Application"
    xmlns:serverblock="clr-namespace:CoreFlow.Application.DTOs.ServerBlock;assembly=CoreFlow.Application"
    xmlns:shared="clr-namespace:CoreFlow.Presentation.Resources.Styles.Shared"
    xmlns:viewmodels="clr-namespace:CoreFlow.Presentation.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:ServersPageViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Title="Сервера"
    Loaded="Page_Loaded" >
    <Border
        Padding="33,0" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="3,0,3,36"
                Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Page}}"
                Style="{DynamicResource TitleTextBlockStyle}" />
            <Grid
                Grid.Row="1"
                Margin="3,0,3,24" >
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid
                    Margin="0,0,0,16" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition
                        Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <controls:TextBox
                        Placeholder="Поисковая строка"
                        Text="{Binding SearchString, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Command="{Binding SearchCommand}"
                        Content="Поиск"
                        Grid.Column="1"
                        IsDefault="True"
                        Margin="8,0,0,0"
                        Style="{DynamicResource Button.Standard.TextOnly}" />
                </Grid>
                <Grid
                    Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition
                            Width="Auto" />
                        <ColumnDefinition
                            Width="Auto" />
                        <ColumnDefinition
                            Width="Auto" />
                        <ColumnDefinition
                            Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Command="{Binding CreateBlockCommand}"
                        Content="Добавить блок"
                        Grid.Column="1"
                        Margin="0,0,8,0"
                        Style="{DynamicResource Button.Standard.TextOnly}" />
                    <Button
                        Command="{Binding CreateServerCommand}"
                        Content="Добавить сервер"
                        Grid.Column="2"
                        Margin="0,0,8,0"
                        Style="{DynamicResource Button.Standard.TextOnly}" />
                    <Button
                        Command="{Binding UpdateCommand}"
                        Content="Изменить"
                        Grid.Column="3"
                        IsEnabled="{Binding SelectedKey, Converter={StaticResource NotNullConverter}}"
                        Margin="0,0,8,0"
                        Style="{DynamicResource Button.Standard.TextOnly}" />
                    <Button
                        Command="{Binding DeleteCommand}"
                        Content="Удалить"
                        Grid.Column="4"
                        IsEnabled="{Binding SelectedKey, Converter={StaticResource NotNullConverter}}"
                        Style="{DynamicResource Button.Standard.TextOnly}" />
                </Grid>
            </Grid>
            <TreeView
                shared:TreeViewProperties.SelectedItem="{Binding SelectedKey}"
                Grid.Row="2"
                ItemsSource="{Binding ServerBlockDto}"
                Style="{DynamicResource TreeView}" >
                <TreeView.ItemContainerStyle>
                    <Style
                        TargetType="{x:Type TreeViewItem}"
                        BasedOn="{StaticResource TreeView.ListItem.TextOnly}" >
                        <Setter
                            Property="shared:ListItemProperties.Text"
                            Value="{Binding Name}" />
                        <Setter
                            Property="IsExpanded"
                            Value="True" />
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.Resources>
                    <HierarchicalDataTemplate
                        DataType="{x:Type serverblock:ServerBlockDto}"
                        ItemsSource="{Binding Servers}" >
                        <HierarchicalDataTemplate.ItemContainerStyle>
                            <Style
                                TargetType="{x:Type TreeViewItem}"
                                BasedOn="{StaticResource TreeView.ListItem.TextHint}" >
                                <Setter
                                    Property="shared:ListItemProperties.Caption"
                                    Value="{Binding IpAddress}" />
                                <Setter
                                    Property="shared:ListItemProperties.Text"
                                    Value="{Binding DisplayName}" />
                            </Style>
                        </HierarchicalDataTemplate.ItemContainerStyle>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
        </Grid>
    </Border>
</Page>