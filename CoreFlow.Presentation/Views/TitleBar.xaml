<UserControl
    x:Class="CoreFlow.Presentation.Views.TitleBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:CoreFlow.Presentation.Controls"
    xmlns:viewmodels="clr-namespace:CoreFlow.Presentation.ViewModels"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:TitleBarViewModel}"
    d:DesignHeight="48"
    d:DesignWidth="800" >
    <Grid>
        <Border
            CornerRadius="8,8,0,0" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition
                    Width="Auto" />
            </Grid.ColumnDefinitions>
            <controls:Grid
                Margin="8,0,0,0"
                Orientation="Horizontal"
                Spacing="16" >
                <Button
                    shell:WindowChrome.IsHitTestVisibleInChrome="True"
                    Command="{Binding UserCommand}"
                    Focusable="False"
                    Style="{DynamicResource TitleBar.User}" />
                <TextBlock
                    FontFamily="{DynamicResource SegoeFluentIcons}"
                    FontSize="16"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    LineHeight="16"
                    Text="&#xEF90;"
                    VerticalAlignment="Center" />
                <TextBlock
                    Style="{DynamicResource CaptionTextBlockStyle}"
                    Text="Core Flow"
                    VerticalAlignment="Center" />
                <TextBlock
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Style="{DynamicResource CaptionTextBlockStyle}"
                    Text="{Binding FullName}"
                    VerticalAlignment="Center"
                    Visibility="{Binding UserVisibility}" />
                <ComboBox
                    shell:WindowChrome.IsHitTestVisibleInChrome="True"
                    DisplayMemberPath="ShortName"
                    IsEditable="False"
                    ItemContainerStyle="{DynamicResource ComboBox.ListItem.TextOnly}"
                    ItemsSource="{Binding SystemDto}"
                    SelectedIndex="0"
                    Style="{DynamicResource ComboBox}"
                    Visibility="{Binding UserVisibility}" />
            </controls:Grid>
            <Grid
                Grid.Column="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    shell:WindowChrome.IsHitTestVisibleInChrome="True"
                    Command="{Binding ToggleThemeCommand}"
                    Content="&#xE793;"
                    Focusable="False"
                    Style="{DynamicResource TitleBar.Caption}" />
                <Button
                    shell:WindowChrome.IsHitTestVisibleInChrome="True"
                    Command="{Binding MinimizeCommand}"
                    Content="&#xE921;"
                    Focusable="False"
                    Grid.Column="1"
                    Style="{DynamicResource TitleBar.Caption}" />
                <Button
                    shell:WindowChrome.IsHitTestVisibleInChrome="True"
                    Command="{Binding MaximizeRestoreCommand}"
                    Content="{Binding MaxRestoreIcon}"
                    Focusable="False"
                    Grid.Column="2"
                    Style="{DynamicResource TitleBar.Caption}" />
                <Button
                    shell:WindowChrome.IsHitTestVisibleInChrome="True"
                    Command="{Binding CloseCommand}"
                    Focusable="False"
                    Grid.Column="3"
                    Style="{DynamicResource TitleBar.Close}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>