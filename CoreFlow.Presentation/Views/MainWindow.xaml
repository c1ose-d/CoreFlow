<Window
    x:Class="CoreFlow.Presentation.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:CoreFlow.Presentation.Controls"
    xmlns:viewmodels="clr-namespace:CoreFlow.Presentation.ViewModels"
    xmlns:views="clr-namespace:CoreFlow.Presentation.Views"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:MainWindowViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    AllowsTransparency="True"
    Background="Transparent"
    BorderBrush="Transparent"
    Foreground="Transparent"
    Title="CoreFlow"
    ResizeMode="CanResize"
    WindowStyle="None" >
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="48"
            CornerRadius="{DynamicResource OverlayCornerRadius}"
            GlassFrameThickness="0"
            ResizeBorderThickness="8,8,8,8"
            UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>
    <Grid>
        <Border
            Background="{DynamicResource AcrylicBackgroundFillColorBaseBrush}"
            BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{DynamicResource OverlayCornerRadius}" >
        </Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="48" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ContentControl
                x:Name="TitleBarHost" />
        </Grid>
        <controls:NotificationsHost
            DataContext="{Binding}"
            IsHitTestVisible="False"/>
    </Grid>
</Window>